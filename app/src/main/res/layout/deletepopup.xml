<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="475dp"
              android:background="@color/colorPrimary"
              android:padding="5dp"
              android:layout_gravity="center">
    <TextView
            android:id="@+id/txtclose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="X"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
       />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sale"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" android:id="@+id/advertType"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elina Grofild"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" android:id="@+id/title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montreal,Canada"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" android:id="@+id/location"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <LinearLayout

                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150000"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:id="@+id/pricenumber"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
            />
        </LinearLayout>
        <LinearLayout

                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:id="@+id/areanumber"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
            />
        </LinearLayout>
        <LinearLayout

                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:id="@+id/roomsnumber"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rooms"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
            />
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:text="TextView"
            android:layout_width="339dp"
            android:layout_height="wrap_content" android:id="@+id/textView17"
            android:textColor="@color/colorWhite"
            tools:text="If you click on 'DELETE ADVERT' you will delete your advert permanently. Are you sure?"
            android:textStyle="bold" android:textAllCaps="false" android:textSize="12sp"/>
    <Button
            android:id="@+id/btndelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE ADVERT"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorRed"
            android:layout_gravity="center_horizontal"
    />

</LinearLayout>